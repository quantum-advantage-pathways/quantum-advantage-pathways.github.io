# Environment variables for the Leaderboard Generator Chat Interface

# Node environment (development or production)
NODE_ENV=development

# Server port
PORT=4000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# LLM Provider (openai or local)
LLM_PROVIDER=openai

# OpenAI API Key (required if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI Model (defaults to gpt-4-turbo)
OPENAI_MODEL=gpt-4-turbo

# Local LLM URL (required if LLM_PROVIDER=local)
LOCAL_LLM_URL=http://localhost:8080

# Local LLM Model Parameters
LOCAL_LLM_CONTEXT_SIZE=4096
LOCAL_LLM_MAX_TOKENS=2048
LOCAL_LLM_TEMPERATURE=0.7

# Data storage paths
SESSIONS_DIR=./data/sessions
CONFIGS_DIR=./data/configs
PREVIEWS_DIR=./data/previews

# Logging level (debug, info, warn, error)
LOG_LEVEL=info